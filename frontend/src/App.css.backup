}

.curator-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.curator-card h3 {
  font-size: 1.3rem;
  font-family: 'Playfair Display', serif;
  color: #333;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.curator-card p {
  font-size: 0.95rem;
  color: #ff6b9d;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

/* Testimonial Section */
.testimonial-section {
  padding: 4rem 2rem;
  background: linear-gradient(135deg, #ffeef5 0%, #ffe8f0 100%);
}

.testimonial-content {
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
