/* Meet the Curators Section */
.curators-section {
  padding: 4rem 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.curators-section h2 {
  font-size: 2.5rem;
  font-family: 'Playfair Display', serif;
  color: #333;
  text-align: center;
  margin-bottom: 3rem;
  font-weight: 600;
}

.curators-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
