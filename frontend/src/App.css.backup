  transition: border-color 0.2s;
}

.signin-input-wrapper input:focus {
  outline: none;
  border-color: #ff6b9d;
}

.signin-input-wrapper input::placeholder {
  color: #bbb;
}

/* Password Toggle Button */
.password-toggle {
  position: absolute;
  right: 1rem;
  background: none;
  border: none;
  color: #999;
  cursor: pointer;
  padding: 0.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.2s;
}

.password-toggle:hover {
  color: #ff6b9d;
}

.password-toggle svg {
  width: 20px;
  height: 20px;
}

/* Forgot Password Link */
.forgot-password {
  text-align: right;
  margin-bottom: 1.5rem;
}

.forgot-password a {
  font-size: 0.9rem;
  color: #999;
  text-decoration: none;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: color 0.2s;
}

.forgot-password a:hover {
  color: #ff6b9d;
  text-decoration: underline;
}

/* Sign In Button */
.signin-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff5589 100%);
  color: white;
  border: none;
  padding: 1rem;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: transform 0.2s, box-shadow 0.2s;
  margin-bottom: 1.5rem;
}

.signin-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(255, 107, 157, 0.3);
}

.signin-btn:active {
  transform: translateY(0);
}

/* Sign Up Link */
.signup-link {
  text-align: center;
  font-size: 0.95rem;
  color: #666;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.signup-link a {
  color: #ff6b9d;
  text-decoration: none;
  font-weight: 600;
  transition: color 0.2s;
}

.signup-link a:hover {
  color: #ff5589;
  text-decoration: underline;
}

/* Sign In Footer */
.signin-footer {
  margin-top: 3rem;
  text-align: center;
  width: 100%;
}

.signin-footer p {
  font-size: 0.85rem;
  color: #999;
  margin-bottom: 1rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.social-links {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
}

.social-links a {
  color: #999;
  transition: color 0.2s, transform 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.social-links a:hover {
  color: #ff6b9d;
  transform: translateY(-2px);
}

.social-links svg {
  width: 24px;
  height: 24px;
}

/* Responsive Sign In */
@media (max-width: 768px) {
  .signin-container {
    padding: 2rem 1rem;
  }
  
  .signin-card {
    padding: 2rem 1.5rem;
  }
  
  .signin-header h1 {
    font-size: 2rem;
  }
  
  .signin-header p {
    font-size: 0.9rem;
  }
}

/* ==================== ABOUT PAGE ==================== */

/* About Page Layout */
.about-page {
  min-height: 100vh;
  background: #fff;
}

/* About Hero Section */
.about-hero {
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.1) 0%, rgba(255, 185, 210, 0.1) 100%),
              url('/images/gift-box-hero.jpg') center/cover;
