  border: none;
  padding: 1rem 2.5rem;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: transform 0.2s, box-shadow 0.2s;
}

.cta-btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(255, 107, 157, 0.4);
}

.cta-btn-secondary {
  background: white;
  color: #333;
  border: 2px solid white;
  padding: 1rem 2.5rem;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: transform 0.2s, background 0.2s, color 0.2s;
}

.cta-btn-secondary:hover {
  transform: translateY(-2px);
  background: transparent;
  color: white;
}

/* Responsive About Page */
@media (max-width: 1024px) {
  .our-story-container {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .values-grid {
    grid-template-columns: 1fr;
  }
  
  .curators-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .about-hero {
    padding: 5rem 1.5rem;
  }
  
  .about-hero-content h1 {
    font-size: 2.5rem;
  }
  
  .about-hero-content p {
    font-size: 1rem;
  }
  
  .our-story-section {
    padding: 3rem 1rem;
  }
  
  .our-story-container {
    padding: 2rem;
  }
  
  .our-story-text h2 {
    font-size: 2rem;
  }
  
  .mission-values-section h2,
  .curators-section h2 {
    font-size: 2rem;
  }
  
  .testimonial-content blockquote {
    font-size: 1.1rem;
  }
  
  .about-cta-content h2 {
    font-size: 2rem;
  }
  
  .about-cta-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .cta-btn-primary,
  .cta-btn-secondary {
    width: 100%;
    max-width: 300px;
  }
}

/* ==================== CONTACT PAGE ==================== */

/* Contact Page Layout */
.contact-page {
  min-height: 100vh;
  background: #fafafa;
}

.contact-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 4rem 2rem;
}

/* Contact Header */
.contact-header {
  text-align: center;
  margin-bottom: 4rem;
}

.contact-header h1 {
  font-size: 3rem;
  font-family: 'Playfair Display', serif;
  color: #333;
  margin-bottom: 1rem;
  font-weight: 600;
}

.contact-header p {
  font-size: 1.1rem;
  color: #666;
  max-width: 700px;
  margin: 0 auto;
  line-height: 1.6;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

/* Contact Content Grid */
.contact-content-grid {
  display: grid;
  grid-template-columns: 1fr 400px;
  gap: 3rem;
  margin-bottom: 3rem;
}

/* Contact Form Section */
.contact-form-section {
  background: white;
  padding: 2.5rem;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.06);
}

.contact-form-section h2 {
  font-size: 1.8rem;
  font-family: 'Playfair Display', serif;
  color: #333;
  margin-bottom: 2rem;
  font-weight: 600;
}

.contact-form .form-group {
  margin-bottom: 1.5rem;
}

.contact-form .form-group label {
  display: block;
  font-size: 0.9rem;
  color: #555;
  margin-bottom: 0.5rem;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.contact-form .form-group input,
.contact-form .form-group textarea {
  width: 100%;
  padding: 0.8rem 1rem;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 0.95rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: border-color 0.2s;
}

.contact-form .form-group input:focus,
.contact-form .form-group textarea:focus {
  outline: none;
  border-color: #ff6b9d;
}

.contact-form .form-group input::placeholder,
.contact-form .form-group textarea::placeholder {
  color: #aaa;
}

.contact-form .form-group textarea {
  resize: vertical;
  min-height: 120px;
}

.send-message-btn {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff5589 100%);
  color: white;
  border: none;
  padding: 1rem 2.5rem;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: transform 0.2s, box-shadow 0.2s;
  margin-top: 1rem;
}

.send-message-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(255, 107, 157, 0.3);
}

.send-message-btn:active {
  transform: translateY(0);
}

/* Contact Info Section */
.contact-info-section {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.contact-info-card {
  background: white;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.06);
}

.contact-info-card h2 {
  font-size: 1.4rem;
  font-family: 'Playfair Display', serif;
  color: #333;
  margin-bottom: 1.5rem;
  font-weight: 600;
}

.contact-info-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 0;
  border-bottom: 1px solid #f0f0f0;
}

.contact-info-item:last-child {
  border-bottom: none;
}

.contact-icon {
  flex-shrink: 0;
  width: 40px;
  height: 40px;
  background: #ffeef5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-info-text {
  flex: 1;
}

.contact-info-text a,
.contact-info-text span {
  font-size: 0.95rem;
  color: #333;
  text-decoration: none;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: color 0.2s;
}

.contact-info-text a:hover {
  color: #ff6b9d;
}

/* Boutique Card */
.boutique-card {
  background: white;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.06);
}

.boutique-card h3 {
  font-size: 1.3rem;
  font-family: 'Playfair Display', serif;
  color: #333;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.boutique-card p {
  font-size: 0.95rem;
  color: #666;
  margin-bottom: 1rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.boutique-map {
  border-radius: 8px;
  overflow: hidden;
  background: #f5ebe0;
}

/* Social Media Links */
.contact-social-section {
  text-align: center;
  padding: 2rem 0;
}

.social-links-contact {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
}

.social-links-contact a {
  width: 48px;
  height: 48px;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  transition: all 0.3s;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.social-links-contact a:hover {
  color: #ff6b9d;
  transform: translateY(-3px);
  box-shadow: 0 4px 12px rgba(255, 107, 157, 0.2);
}

/* Newsletter Section */
.newsletter-section {
  background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
  padding: 3rem 2rem;
}

.newsletter-container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: center;
}

.newsletter-content h3 {
  font-size: 2rem;
  font-family: 'Playfair Display', serif;
  color: white;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.newsletter-content p {
  font-size: 1rem;
  color: rgba(255,255,255,0.7);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.newsletter-form {
  display: flex;
  gap: 0.5rem;
}

.newsletter-form input {
  flex: 1;
  padding: 0.9rem 1.5rem;
  border: 1px solid rgba(255,255,255,0.2);
  border-radius: 25px;
  font-size: 0.95rem;
  background: rgba(255,255,255,0.1);
  color: white;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: border-color 0.2s, background 0.2s;
}

.newsletter-form input:focus {
  outline: none;
  border-color: #ff6b9d;
  background: rgba(255,255,255,0.15);
}

.newsletter-form input::placeholder {
  color: rgba(255,255,255,0.5);
}

.newsletter-form button {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff5589 100%);
  color: white;
  border: none;
  padding: 0.9rem 2rem;
  border-radius: 25px;
  font-size: 0.95rem;
  font-weight: 600;
  cursor: pointer;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: transform 0.2s, box-shadow 0.2s;
  white-space: nowrap;
}

.newsletter-form button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(255, 107, 157, 0.4);
}

/* Responsive Contact Page */
@media (max-width: 1024px) {
  .contact-content-grid {
    grid-template-columns: 1fr;
  }
  
  .newsletter-container {
    grid-template-columns: 1fr;
    gap: 2rem;
    text-align: center;
  }
}

@media (max-width: 768px) {
  .contact-container {
    padding: 2rem 1rem;
  }
  
  .contact-header {
    margin-bottom: 2rem;
  }
  
  .contact-header h1 {
    font-size: 2.5rem;
  }
  
  .contact-header p {
    font-size: 1rem;
  }
  
  .contact-form-section {
    padding: 2rem 1.5rem;
  }
  
  .contact-content-grid {
    gap: 2rem;
  }
  
  .newsletter-form {
    flex-direction: column;
  }
  
  .newsletter-form button {
    width: 100%;
  }
  
  .social-links-contact {
    gap: 1rem;
  }
}

