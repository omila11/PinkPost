.faq-question span {
  font-size: 1.1rem;
  color: #333;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  flex: 1;
  padding-right: 1rem;
}

.faq-icon {
  color: #ff6b9d;
  flex-shrink: 0;
  transition: transform 0.3s;
}

.faq-icon.open {
  transform: rotate(180deg);
}

/* FAQ Answer */
.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out, padding 0.3s ease-out;
}

.faq-answer.open {
  max-height: 500px;
  padding: 0 2rem 1.5rem 2rem;
}

.faq-answer p {
  font-size: 1rem;
  color: #666;
  line-height: 1.7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  margin: 0;
}

/* FAQs CTA Section */
.faqs-cta {
  text-align: center;
  padding: 3rem 2rem;
  margin-top: 3rem;
  background: white;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
}

.faqs-cta h2 {
  font-size: 2rem;
  font-family: 'Playfair Display', serif;
  color: #333;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.faqs-cta p {
  font-size: 1rem;
  color: #666;
  margin-bottom: 2rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.contact-cta-btn {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff5589 100%);
  color: white;
  border: none;
  padding: 1rem 2.5rem;
  border-radius: 25px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  transition: transform 0.2s, box-shadow 0.2s;
}

.contact-cta-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(255, 107, 157, 0.3);
}

/* Responsive FAQs */
@media (max-width: 768px) {
  .faqs-container {
    padding: 2rem 1rem;
  }
  
  .faqs-header {
    margin-bottom: 2rem;
  }
  
  .faqs-header h1 {
    font-size: 2.5rem;
  }
  
  .faqs-header p {
    font-size: 1rem;
  }
  
  .faq-category-title {
    font-size: 1.5rem;
  }
  
  .faq-question {
    padding: 1.25rem 1.5rem;
  }
  
  .faq-question span {
    font-size: 1rem;
  }
  
  .faq-answer.open {
    padding: 0 1.5rem 1.25rem 1.5rem;
  }
  
  .faqs-cta {
    padding: 2rem 1.5rem;
  }
  
  .faqs-cta h2 {
    font-size: 1.75rem;
  }
}
