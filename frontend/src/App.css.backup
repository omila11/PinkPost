  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.testimonial-stars {
  color: #ff6b9d;
  font-size: 1.2rem;
  letter-spacing: 0.25rem;
}

/* About CTA Section */
.about-cta-section {
  padding: 5rem 2rem;
  background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
  text-align: center;
}

.about-cta-content h2 {
  font-size: 2.5rem;
  font-family: 'Playfair Display', serif;
  color: white;
  margin-bottom: 1rem;
  font-weight: 600;
}

.about-cta-content p {
  font-size: 1.1rem;
  color: rgba(255,255,255,0.8);
  margin-bottom: 2.5rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.about-cta-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.cta-btn-primary {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff5589 100%);
