    { id: 3, name: 'Sweet Treats Bundle', theme: 'Food & beverage', sold: 85, image: 'üéÅ' }
  ];

  const recentOrders = [
    { id: '#ORD-7829', customer: 'Sarah Jenkins', email: 'sarah@example.com', date: 'Oct 24, 2023', total: 125.00, status: 'Processing', avatar: 'SJ' },
